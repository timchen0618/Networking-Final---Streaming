<div class="localStream" ng-controller="LocalStreamController as localStream">
	<h3>Streaming</h3>
	<div class="input-field input_name">
		<input id="name" type="text" ng-model="localStream.name">
		<label for="name">Username:</label>
	</div>
	<div class="row watch_wrap">
		<div class="col">
			<video id="localVideo" muted="muted" autoplay="true"></video>
			<li ng-click="localStream.toggleCam()">
				<a href>{{ localStream.cameraIsOn ? 'Stop' : 'Start' }}</a>
			</li>
		</div>
		<div class="col chat_wrap_2" id="server_chat_wrap">
			<div>
				<div class="chat_show_2" id="server_chat">
				</div>
			</div>
		</div>
	</div>
