<div class="remoteStreams" ng-controller="RemoteStreamsController as rtc">
	<h3>Watching</h3>
	<div class="row">
		<table class="centered col s6">
			<thead>
				<tr>
					<th>Stream</th><th>1-way</th><th>2-way</th>
					</tr>
				</thead>
			<tbody>
				<tr ng-repeat="stream in rtc.remoteStreams" ng-class="{'selected' : stream.isPlaying}">
					<td><a>{{stream.name}}</a></td>
					<td ng-click="rtc.view(stream)"><a>View</a></td>
					<td ng-click="rtc.call(stream)"><a>Call</a></td>
				</tr>
			</tbody>
		</table>
		<div class="input-field col s3 offset-s2">
			<input id="guestname" type="text" class="validate" ng-model="rtc.name">
			<label for="guestname">Name</label>
		</div>
	</div>
	<div class="refresh">
		<li ng-click="rtc.loadData()">
			<a href>Refresh</a>
		</li>
	</div>
	<div class="row watch_wrap">
		<div class="col video_wrap" id="remoteVideosContainer"></div>
		<div class="col chat_wrap" id='chat'>
			<div>
				<div class="chat_show" id='chatbox'>
				</div>
				<div class="row input_sub">
					<div class="input-field col s8">
						<input placeholder="input" ng-model='rtc.input'>
					</div>
					<div class="input-field col s3">
						<button class="btn waves-effect waves-light" type="submit" ng-click='rtc.send_text()'>Send</button>
					</div>
					
				</div>
			</div>
		</div>
	</div>


</div>